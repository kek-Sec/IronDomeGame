{
  "name": "iron-dome-game",
  "version": "1.4.0",
  "description": "A web-based tower defense game inspired by the Iron Dome system.",
  "main": "js/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel scss:watch serve",
    "serve": "http-server -c-1",
    "start": "npm run build:publish && http-server dist -c-1",
    "scss:watch": "sass --watch scss/main.scss css/style.css",
    "clean": "rimraf dist",
    "build:html": "html-minifier index.prod.html -o dist/index.html --collapse-whitespace --remove-comments --remove-optional-tags",
    "build:css": "sass scss/main.scss dist/css/style.css && cssnano dist/css/style.css --no-map --o dist/css/style.css",
    "build:js": "esbuild js/main.js --bundle --minify --sourcemap --outfile=dist/js/main.min.js",
    "build:publish": "npm run clean && npm-run-all --parallel build:html build:css build:js"
  },
  "keywords": [
    "game",
    "tower-defense",
    "html5",
    "canvas",
    "javascript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cssnano-cli": "^1.0.5",
    "esbuild": "^0.21.4",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "sass": "^1.77.4"
  }
}