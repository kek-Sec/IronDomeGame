{
  "name": "iron-dome-game",
  "version": "1.2.1",
  "description": "A web-based tower defense game inspired by the Iron Dome system.",
  "main": "js/main.js",
  "scripts": {
    "build": "sass scss/main.scss css/style.css",
    "serve": "http-server -c-1",
    "scss:watch": "sass --watch scss/main.scss css/style.css",
    "dev": "npm-run-all --parallel scss:watch serve",
    "start": "npm run build && npm run serve"
  },
  "keywords": [
    "game",
    "tower-defense",
    "html5",
    "canvas",
    "javascript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.77.4"
  }
}